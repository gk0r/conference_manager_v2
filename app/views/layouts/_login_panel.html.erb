<% if current_user %>
	<ul class="nav pull-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.first_name %> <%= current_user.last_name  %><b class="caret"></b></a>
			<ul class="dropdown-menu">
				<li><%= link_to "Update Profile", edit_user_path(current_user.id) %></li>
				<li class="divider"></li>
				<li><%= link_to "Logout", sign_out_path %></li>
			</ul>
		</li>
	</ul>
<% else %>
	<ul class="nav pull-right">
		<li> <%= link_to "Sign In", sign_in_path %> </li>
		<li class="divider-vertical"> </li>
		<li> <%= link_to "Register", new_user_path %> </li>
	</ul>
<% end %>