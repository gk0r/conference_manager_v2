<legend>Listing users</legend>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Telephone Number</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

	<% @users.each do |user| %>
	  <tr>
	    <td><%= link_to user.username, edit_user_path(user) %></td>
	    <td><%= link_to user.first_name, edit_user_path(user) %></td>
	    <td><%= link_to user.last_name, edit_user_path(user) %></td>
	    <td><%= link_to user.telephone_number, edit_user_path(user) %></td>
	    <td><%= image_tag("apply.png") if user.admin %></td>
	    <td>
	      
			<%= link_to(edit_user_path(user), :class=> 'btn btn-mini btn-primary') do %>
  			<i class="icon-user icon-white"> </i> Edit
		  <% end %>
		  
    	<%= link_to user, confirm: 'Are you sure?', method: :delete, :class=>'btn btn-mini btn-danger' do %>
	    	<i class="icon-trash icon-white"> </i> Delete
    	<% end %>
		</td>
	  </tr>
	<% end %>
	</tbody>
</table>

<%= link_to 'New User', new_user_path, :class=>'btn btn-primary' %>

