<legend>Listing users</legend>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Telephone Number</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>

	<% @users.each do |user| %>
	  <tr>
	    <td><%= user.username %></td>
	    <td><%= user.first_name %></td>
	    <td><%= user.last_name %></td>
	    <td><%= user.telephone_number %></td>
	    <td><%= image_tag("apply.png") if user.admin %></td>
	    <td>
			<%= link_to 'Edit', edit_user_path(user), :class=> 'btn btn-mini btn-primary' %>
	    	<%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, :class=>'btn btn-mini btn-danger' %>
		</td>
	  </tr>
	<% end %>
	</tbody>
</table>

<%= link_to 'New User', new_user_path, :class=>'btn btn-primary' %>
